<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record model='ir.ui.view' id='pengajuan_lphd_form'>
      <field name="name">LPHD</field>
      <field name="model">report.lphd</field>
      <field name="arch" type='xml'>
        <form>
          <header>
            <button name="action_submit" states='draft' string="Submit" type="object" class="oe_highlight"/>
            <button name="action_approve_manager" states='submit' string="Approve Manager" type="object" class="oe_highlight" groups='hr_expense.group_hr_expense_manager'/>
            <button name="action_approve" states='approve_manager' string="Approve" type="object" class="oe_highlight" groups='hr_expense.group_hr_expense_manager'/>
            <button name="action_refused" states='submit' string="Refused" type="object" class="oe_highlight" groups='account.group_account_manager'/>
            <button name="action_set_draft" states='refuse' string="Set to Draft" type="object" class="oe_highlight" groups='hr_expense.group_hr_expense_manager'/>

            <field name="state" widget="statusbar" statusbar_visible="draft,submit,approve_manager,approve,done"/>
          </header>
          <sheet>
            <group>
              <group>
                <field name="no_lphd"/>
                <field name="sppd_ids"/>
                <field name="nama_karyawan"/>
                <field name="manager"/>
                <field name="departement"/>
                <field name="periode_dari"/>
                <field name="periode_sampai"/>
              </group>
              <group>
                <field name="maksud_utama"/>
                <field name="wilayah_dikunjungi"/>
              </group>
              <field name="aktivitias"/>
            </group>
            <notebook>
              <page string="Realisasi Biaya">
                <field name="realisasi_biaya_ids">
                  <tree editable="bottom">
                    <field name="jenis_biaya"/>
                    <field name="biaya_hari_1"/>
                    <field name="biaya_hari_2"/>
                    <field name="biaya_hari_3"/>
                    <field name="biaya_hari_4"/>
                    <field name="biaya_hari_5"/>
                    <field name="sub_total"/>
                  </tree>
                </field>
                <group class="oe_subtotal_footer oe_right" colspan="2" name="total_biaya">
                  <field name="total"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="pengajuan_lphd_tree">
      <field name="name">LPHD</field>
      <field name="model">report.lphd</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no_lphd"/>
          <field name="sppd_ids"/>
          <field name="nama_karyawan"/>
          <field name="manager"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

  </data>
</odoo>
