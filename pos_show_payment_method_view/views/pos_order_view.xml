<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_pos_order_tree_inherit_pos_show_payment_method_view" model="ir.ui.view">
    <field name="name">pos.order.tree.inherit.pos.show.payment.method.view</field>
    <field name="model">pos.order</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='amount_total']" position="after">
        <field name="payment_method_id"/>
      </xpath>
    </field>
  </record>

  <record id="view_pos_order_filter_inherit_pos_show_payment_method_view" model="ir.ui.view">
    <field name="name">pos.order.list.select</field>
    <field name="model">pos.order</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_order_filter"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='session_id']" position="after">
        <field name="payment_method_id"/>
      </xpath>
      <xpath expr="//group//filter[@name='order_month']" position="after">
        <field name="payment_method_id"/>
        <filter string="Payment Method" name="payment_method_id" domain="[]"
                context="{'group_by': 'payment_method_id'}"/>
      </xpath>
    </field>
  </record>
</odoo>
